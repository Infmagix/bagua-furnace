        <Grid Grid.Column="1">
            <TabControl Style="{StaticResource TabControlStyle}" DockPanel.Dock="Top" x:Name="tabControl">
                <TabItem Header="实时数据" Style="{StaticResource TabItemLineStyle}"/>
                
                <TabItem Header="参数表单" Style="{StaticResource TabItemLineStyle}">
                    <StackPanel Orientation="Vertical">
                        <GroupBox Name="PIDTableExpander" Header="PID Table">
                            <honghaier.View:PIDTableView x:Name="PIDTableView"/>
                        </GroupBox>
                        
                        <Border Height="10" HorizontalAlignment="Stretch" SnapsToDevicePixels="True"/>

